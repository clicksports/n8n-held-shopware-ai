# n8n Workflow Sync Manager Configuration

# n8n Connection
N8N_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key-here
N8N_WEBHOOK_URL=http://localhost:5678/webhook/workflow-sync

# Sync Settings
SYNC_INTERVAL=60000           # 1 minute in milliseconds
WORKFLOWS_DIR=./workflows     # Directory to store workflow files
BACKUP_DIR=./workflow-backups # Directory for automatic backups

# Git Integration
GIT_AUTO_COMMIT=true          # Automatically commit workflow changes
GIT_COMMIT_MESSAGE="Auto-sync workflow changes"

# Web Interface
SYNC_PORT=3001                # Port for monitoring web interface
SYNC_HOST=0.0.0.0             # Host for monitoring web interface

# Optional: Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...